{
  "manifest_version": 3,
  "name": "Fix para comentarios de MARCA",
  "version": "1.0",
  "description": "Una simple extensi√≥n que arregla los habituales problemas de carga de comentarios en MARCA.com.",
  "permissions": ["declarativeNetRequest", "storage"],
  "host_permissions": ["*://*.marca.com/*"],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Fix Comentarios Marca"
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
